<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Demo -->
    <style name="AppThemeTransparentStatusBar" />

    <style name="PrimaryTextStyle">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/primary_font_size</item>
    </style>

    <style name="SecondaryTextStyle">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/secondary_font_size</item>
    </style>

    <style name="HorizontalDividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_size</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="menu_copy">
        <item name="android:fontFamily">Lato-Light</item>
        <item name="android:textColor">#FF46484A</item>
        <item name="android:textSize">9sp</item>
        <item name="android:lineSpacingMultiplier">1.22</item>
    </style>

    <style name="menu_title">
        <item name="android:fontFamily">Lato-Bold</item>
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingMultiplier">1.21</item>
    </style>

    <style name="sub_title_menu">
        <item name="android:fontFamily">Lato-Light</item>
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.21</item>
    </style>
    <style name="txt_menu">
        <item name="android:fontFamily">Lato-Regular</item>
        <item name="android:textColor">#DE5D5D5D</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>
</resources>
